<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    tools:context=".fragment.MakeWorkingWithdrawalFragment"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginTop="50dp"
        android:layout_marginRight="@dimen/dp10"
        android:weightSum="1"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/montserrat_regular"
                android:text="Working Income"
                android:textColor="@color/colorBlack"
                android:textSize="18dp"
                />

            <TextView
                android:id="@+id/txt_working_income"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp10"
                android:fontFamily="@font/montserrat_regular"
                android:text="00.00"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:textSize="16dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/montserrat_regular"
                android:text="Working Withdrawal"
                android:textColor="@color/colorBlack"
                android:textSize="18dp"
                />

            <TextView
                android:id="@+id/txt_working_withdrwa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp10"

                android:fontFamily="@font/montserrat_regular"
                android:text="00.00"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:textSize="16dp"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginTop="10dp"
        android:layout_marginRight="@dimen/dp10"
        android:weightSum="1"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/montserrat_regular"
                android:text="Working Balance"
                android:textColor="@color/colorBlack"
                android:textSize="18dp"
                />

            <TextView
                android:id="@+id/txt_working_balance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp10"
                android:fontFamily="@font/montserrat_regular"
                android:text="00.00"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:textSize="16dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/montserrat_regular"
                android:text="Withdraw Mode"
                android:textColor="@color/colorBlack"
                android:textSize="18dp"
                />

            <TextView
                android:id="@+id/txt_withdrwa_mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp10"
                android:fontFamily="@font/montserrat_regular"
                android:text="00.00"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:textSize="16dp"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginTop="10dp"
        android:layout_marginRight="@dimen/dp10"
        android:weightSum="1"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/montserrat_regular"
                android:text="Withdraw BITCOIN Address"
                android:textColor="@color/colorBlack"
                android:textSize="18dp"
                />

            <TextView
                android:id="@+id/txt_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp10"
                android:fontFamily="@font/montserrat_regular"
                android:text="00.00"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:textSize="16dp"
                />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginRight="@dimen/dp10"
        android:weightSum="1"
        >
        <EditText
            android:id="@+id/et_amount"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_boarder_black"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/montserrat_regular"
            android:hint="Enter Amount"
            android:inputType="number"
            android:lines="1"
            android:padding="5dp"
            >

        </EditText>

        <TextView
            android:id="@+id/btn_withdrwal"
            android:layout_width="wrap_content"
            android:layout_marginTop="50dp"
            android:textColor="@color/white"
            android:text="W.I Withdrawal"
            android:padding="15dp"
            android:fontFamily="@font/montserrat_regular"
            android:textAllCaps="true"
            android:gravity="center"
            android:background="@drawable/button_gradient"
            android:layout_height="wrap_content">

        </TextView>
    </LinearLayout>

</LinearLayout>